{
    "Version": "2008-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "${s3_bucket_arn}/*",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Condition": {
                "StringEquals": {
                    "AWS:SourceArn": "${cloudfront_distribution_arn}"
                }
            }
        }
    ]
}